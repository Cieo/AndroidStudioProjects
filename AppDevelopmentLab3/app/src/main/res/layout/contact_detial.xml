<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#66ccff" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/back" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/detial_name"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background"
        android:layout_alignStart="@id/background"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="Edwin" />

    <ImageView
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/background"
        android:layout_alignEnd="@id/background"
        android:src="@mipmap/empty_star" />

    <LinearLayout
        android:id="@+id/twoRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/detial"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#D5000000"
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18854211875" />

                <TextView
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#8A000000"
                    android:id="@+id/typeAndBelong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机 山东青岛移动" />
            </LinearLayout>




            <ImageView
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/chat"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/chat" />

            <TextView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@id/chat"
                android:background="#1E000000" />
        </RelativeLayout>

        <TextView
            android:background="#1E000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="#D5000000"
            android:id="@+id/more_detial"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="更多资料" />
    </LinearLayout>

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/twoRow"
        android:background="#1E000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank">

        <ListView
            android:id="@+id/contactOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

</RelativeLayout>