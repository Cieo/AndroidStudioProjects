<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cieo233.notetest.MainActivity">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--content-->
        <RelativeLayout
            android:id="@+id/drawerLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fee244">
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:text="NoteTest"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.RecyclerView
                android:padding="2dp"
                android:id="@+id/drawerLayoutContentRecyclerView"
                android:layout_below="@id/toolbar"
                android:layout_above="@+id/popUpMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:background="#fee244"
                android:visibility="gone"
                android:id="@+id/popUpMenu"
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentStart="true"
                    android:id="@+id/popUpMenuShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_share_black_24dp" />
                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:id="@+id/popUpMenuMoveTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="移动到" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/popUpMenuDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_delete_black_24dp" />
            </RelativeLayout>
        </RelativeLayout>

        <!--sideDrawer-->
        <LinearLayout
            android:background="#22262f"
            android:layout_gravity="start"
            android:id="@+id/drawerLayoutDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/userHeader"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/testicon"
                    android:id="@+id/userIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:textColor="#fff"
                    android:layout_marginStart="16dp"
                    android:id="@+id/username"
                    android:text="JetLuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include layout="@layout/divide_line"/>

            <LinearLayout
                android:id="@+id/jumpToSlide"
                android:gravity="center"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_sync_white_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:text="所有笔记"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <include layout="@layout/divide_line"/>

            <LinearLayout
                android:id="@+id/addNewAlbum"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_add_box_white_48dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:text="添加新的相簿"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingEnd="28dp"
                android:paddingStart="28dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:id="@+id/allImageButtonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/allImageButton"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_style_yellow"
                        android:text="所有幻灯片" />
                </LinearLayout>


                <TextView
                    android:id="@+id/allImageBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/allImageButtonLayout"
                    android:layout_alignBottom="@+id/allImageButtonLayout"
                    android:text="12"
                    android:background="@drawable/badge_style"
                    android:textSize="20sp" />

            </RelativeLayout>

            <include layout="@layout/divide_line"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/drawerLayoutDrawerRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
