<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cieo233.notetest.MainActivity">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--content-->
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fee244">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:text="NoteTest"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_below="@id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!" />
        </RelativeLayout>

        <!--sideDrawer-->
        <LinearLayout
            android:background="#22262f"
            android:layout_gravity="start"
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:padding="12dp"
                android:contentDescription="userIconAndName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/testicon"
                    android:id="@+id/userIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:textColor="#fff"
                    android:layout_marginStart="16dp"
                    android:id="@+id/userName"
                    android:text="JetLuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="#979797"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:gravity="center"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_sync_white_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:text="所有笔记"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:background="#979797"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_add_box_white_48dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:text="添加新的相簿"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:paddingEnd="28dp"
                android:paddingStart="28dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:id="@+id/buttonMask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textSize="18sp"
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/button_style_yellow"
                        android:text="所有幻灯片" />
                </LinearLayout>


                <TextView
                    android:id="@+id/badge"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/buttonMask"
                    android:layout_alignBottom="@+id/buttonMask"
                    android:text="12"
                    android:background="@drawable/badge_style"
                    android:textSize="20sp" />

            </RelativeLayout>

            <TextView
                android:background="#979797"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
