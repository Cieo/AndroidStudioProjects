<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="292.5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_style">

    <TextView
        android:layout_marginTop="11.25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/subColor3"
        android:text="新建相册"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11.25dp"
        android:layout_below="@id/dialogTitle"
        android:textSize="12dp"
        android:text="请输入相册名称"
        android:id="@+id/dialogHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="14sp"
        android:layout_marginStart="16.875dp"
        android:layout_marginTop="11.25dp"
        android:layout_marginEnd="16.875dp"
        android:layout_marginBottom="16.875dp"
        android:layout_below="@id/dialogHint"
        android:id="@+id/inputNewFolderName"
        android:textColor="@color/mainColor3"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_background"
        android:layout_height="30dp"
        android:gravity="center"
        android:maxLines="1"/>

    <TextView
        android:layout_below="@id/inputNewFolderName"
        android:id="@+id/createNewFolderCheck"
        android:layout_width="146.25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_button_right"
        android:gravity="center"
        android:padding="11.25dp"
        android:layout_toEndOf="@+id/createNewFolderCancel"
        android:text="确定"
        android:textColor="@color/mainColor2"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/createNewFolderCancel"
        android:layout_below="@id/inputNewFolderName"
        android:padding="11.25dp"
        android:background="@drawable/dialog_button_left"
        android:textColor="@color/mainColor2"
        android:gravity="center"
        android:textSize="18sp"
        android:text="取消"
        android:layout_width="146.25dp"
        android:layout_height="wrap_content" />
</RelativeLayout>