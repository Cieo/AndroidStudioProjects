<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/subColor2"
    android:gravity="center"
    android:layout_height="match_parent">
    <EditText
        android:textColorHint="@color/mainColor3"
        android:gravity="center"
        android:hint="文件夹名"

        android:maxLines="1"
        android:id="@+id/inputNewFolderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/switch_button"
        android:id="@+id/createNewFolderCheck"
        android:textColor="@color/mainColor2"
        android:padding="10dp"
        android:gravity="center"
        android:text="确定"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>